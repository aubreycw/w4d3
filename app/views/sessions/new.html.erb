<h1>Login</h1>

<form action= "/sessions" method="post">
  <input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">
  
  <label for="user name field">Username:</label>
  <input type = "text" name = "session[user_name]" id = "user name field">

  <br>

  <label for="password field">Password:</label>
  <input type = "text" name = "session[password]" id = "password field">

  <br>

  <input type = "submit" value="Log in!" >
</form>
