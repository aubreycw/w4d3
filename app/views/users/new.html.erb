<%= render "shared/errors" %>

<h1>Sign Up</h1>

<form action= "/users" method="post">
  <input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">
  
  <label for="user name field">Username:</label>
  <input type = "text" name = "user[user_name]" id = "user name field">

  <br>

  <label for="password field">Password:</label>
  <input type = "text" name = "user[password]" id = "password field">

  <br>

  <input type = "submit" value="Sign up!" >
</form>
